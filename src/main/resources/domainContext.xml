<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath*:infrastructure.xml"/>

    <jpa:repositories base-package="com.ostdlabs.monitor.api.repositories" query-lookup-strategy="use-declared-query"
                      repository-impl-postfix="CustomImpl">

    </jpa:repositories>

    <context:component-scan base-package="com.ostdlabs.monitor.api"/>

</beans>